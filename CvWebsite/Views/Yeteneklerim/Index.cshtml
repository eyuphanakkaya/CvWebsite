@using CvWebsite.Models.Entity
@model List<TbTalents>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-dark-blue">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->

                            <div class="card-body">
                                <a href="/Yeteneklerim/YetenekEkle/" class="btn btn-info">Yetenek Ekle</a>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenekler</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th>Sil</th>
                                            <th>Düzenle</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            <tr>
                                                <td>@x.Id</td>
                                                <td>@x.Talent</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="progress-bar progress-bar-danger" style="width: @x.Ratio%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="badge bg-danger">@x.Ratio%</span></td>
                                                <td><a href="/Yeteneklerim/YetenekSil/@x.Id" class="btn btn-danger">Sil</a></td>
                                                <td><a href="/Yeteneklerim/YetenekDuzenle/@x.Id" class="btn btn-success">Düzenle</a></td>

                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>

