@using CvWebsite.Models.Entity
@model List<TbExperiences>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Altbaşlık</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach(var x in Model)
            {
                <tr>
                    <td>@x.Id</td>
                    <td>@x.Title</td>
                    <td>@x.Subtitle</td>
                    <td>@x.Explanation</td>
                    <td>@x.Date</td>
                    <td><a href="/Deneyim/DeneyimSil/@x.Id" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Deneyim/DeneyimDuzenle/@x.Id" class="btn btn-success">Düzenle</a></td>
                </tr>
            }

</table>
<br />
<a href="/Deneyim/DeneyimEkle/" class="btn btn-default">Deneyim Ekle</a>

